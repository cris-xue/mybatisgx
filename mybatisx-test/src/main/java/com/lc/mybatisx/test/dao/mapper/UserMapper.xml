        select
        <trim prefix="" suffix="" suffixOverrides=",">
            role_ids, name, age, phone, email, user_name, password, status, version, id
        </trim>
        from user
        where
            id = #{id}
            <trim prefix="(" suffix=")" prefixOverrides="AND|OR|and|or">
                <if test="arg0 != null"> or  name = #{arg0}</if>
                <if test="arg1 != null"> or age = #{arg1}</if>
                <if test="arg2 != null"> or role_ids = #{arg2, typeHandler=com.lc.mybatisx.test.commons.handler.ListLongTypeHandler}</if>
            </trim>
    </select>-->

    <select id="findTestParam" resultType="com.lc.mybatisx.test.model.entity.User">
        select
            <trim prefix="" suffix="" suffixOverrides=",">
                user.role_ids, user.name, user.age, user.phone, user.email, user.user_name, user.password, user.status, user.version, user.id
            </trim>
        from user user left join user_detail user_detail on user.id = user_detail.user_id
        <where>
            <trim prefix="(" suffix=")" prefixOverrides="AND|OR|and|or">
                user.id = #{id}
                <if test="arg0 != null"> or user.name = #{arg0}</if>
                <if test="arg1 != null"> or user.age = #{arg1}</if>
                <if test="arg2 != null"> or user.role_ids = #{arg2, typeHandler=com.lc.mybatisx.test.commons.handler.ListLongTypeHandler}</if>
            </trim>
        </where>
    </select>



    <resultMap id="findTestSubQueryResultMap" type="com.lc.mybatisx.test.model.entity.User">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="age" column="age"/>
        <result property="phone" column="phone"/>
        <result property="email" column="email"/>
        <result property="userName" column="user_name"/>
        <result property="password" column="password"/>
        <result property="status" column="status"/>
        <result property="version" column="version"/>
        <association property="userDetail" column="id" javaType="com.lc.mybatisx.test.model.entity.UserDetail" fetchType="lazy" select="findTestSubQueryChild"/>
    </resultMap>

    <resultMap id="findTestSubQueryChildResultMap" type="com.lc.mybatisx.test.model.entity.UserDetail">
        <id property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="user.id" column="user_id"/>
    </resultMap>

    <select id="findTestSubQuery" resultMap="findTestSubQueryResultMap">
        select * from user
    </select>

    <select id="findTestSubQueryChild" resultMap="findTestSubQueryChildResultMap">
        select * from user_detail
        <where>
            <!--user_id in <foreach item="item" index="index" collection="list" open="(" separator="," close=")">#{id}</foreach>-->
            user_id = #{id}
        </where>
    </select>
</mapper>