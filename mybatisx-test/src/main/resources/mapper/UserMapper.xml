<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lc.mybatisx.test.dao.UserDao">

    <resultMap id="findTestSubQueryResultMap" type="com.lc.mybatisx.test.model.entity.User">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="age" column="age"/>
        <result property="phone" column="phone"/>
        <result property="email" column="email"/>
        <result property="userName" column="user_name"/>
        <result property="password" column="password"/>
        <result property="status" column="status"/>
        <result property="version" column="version"/>
        <association property="userDetail" column="{user_id=id}" javaType="com.lc.mybatisx.test.model.entity.UserDetail" fetchType="lazy" select="findTestSubQueryChild"/>
    </resultMap>

    <resultMap id="findTestSubQueryChildResultMap" type="com.lc.mybatisx.test.model.entity.UserDetail">
        <id property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="userId" column="user_id"/>
    </resultMap>

    <select id="findTestParam" resultType="com.lc.mybatisx.test.model.entity.User">
        select * from user where tenant_id = #{tenantId}
    </select>

    <select id="findTestSubQuery" resultMap="findTestSubQueryResultMap">
        select * from user
    </select>

    <select id="findTestSubQueryChild" resultMap="findTestSubQueryChildResultMap">
        select * from user_detail
        <where>
            <foreach item="item" index="index" collection="list" open="(" separator=" or " close=")">user_id = #{item.id}</foreach>
        </where>
    </select>
</mapper>
